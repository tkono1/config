[user]
	name = ${USER}
	email = <email>
	signingkey = <git config --global user.signingkey <SSH public key>>
[color]
	ui = auto
[core]
	editor = vim
	excludesfile = ${HOME}/.config/git/ignore
	autocrlf = input
	quotepath = false
	ignorecase = false
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[gpg]
	format = ssh
[commit]
	gpgsign = true
[pull]
	rebase = false
[gpg "ssh"]
allowedSignersFile = ${HOME}/.config/git/allowed_signers
